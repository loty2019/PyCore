# Database Configuration
# SQLite (easiest for testing - no setup required)
DATABASE_URL=sqlite:///./microscope.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/microscope_db

# Raspberry Pi Configuration
RPI_URL=http://raspberrypi.local:5000
RPI_TIMEOUT=10

# Storage Configuration
IMAGES_PATH=./images
THUMBNAILS_PATH=./thumbnails
THUMBNAIL_SIZE=400

# Camera Configuration
CAMERA_INDEX=0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Safety Limits (steps)
MAX_X_POSITION=10000
MAX_Y_POSITION=10000
MAX_Z_POSITION=5000
MIN_X_POSITION=0
MIN_Y_POSITION=0
MIN_Z_POSITION=0

# Watchdog Configuration
WATCHDOG_TIMEOUT=30

# CORS Configuration (for development)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000

# Application
DEBUG=True
